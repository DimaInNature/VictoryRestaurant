    <!--#region Menu-->

    <Storyboard x:Key="sb_GeneralMenuOnChecked">
        <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)">
            <EasingColorKeyFrame KeyTime="0:0:0.2" Value="#f2745f" />
        </ColorAnimationUsingKeyFrames>
    </Storyboard>
    <Storyboard x:Key="sb_GeneralMenuOnUnchecked">
        <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)">
            <EasingColorKeyFrame KeyTime="0:0:0.2" Value="Black" />
        </ColorAnimationUsingKeyFrames>
    </Storyboard>

    <Style
        x:Key="ac_MenuButtonStyle"
        BasedOn="{StaticResource {x:Type ToggleButton}}"
        TargetType="{x:Type RadioButton}">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">

                        <Border
                            Margin="2"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Background="{TemplateBinding Background}"
                            CornerRadius="10">

                            <TextBlock
                                Margin="50,0,0,0"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource BaseFontFamily}"
                                Foreground="{TemplateBinding Foreground}"
                                Text="{TemplateBinding Property=Content}" />
                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Cursor" Value="Hand" />
        </Style.Setters>
        <Style.Triggers>
            <EventTrigger RoutedEvent="ToggleButton.Checked">
                <BeginStoryboard Storyboard="{StaticResource sb_GeneralMenuOnChecked}" />
            </EventTrigger>
            <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                <BeginStoryboard Storyboard="{StaticResource sb_GeneralMenuOnUnchecked}" />
            </EventTrigger>
        </Style.Triggers>

    </Style>

